# prefer vim, duh
export GIT_EDITOR=vim
export EDITOR=vim
export ZDOTDIR=$HOME
# add ~/bin to the path
export PATH="$PATH:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
export PATH="$PATH:$HOME/.bin:$HOME/bin:$HOME/.local/bin"
# export MANPATH="/usr/local/man:$MANPATH"
# add cargo to PATH
export PATH="$HOME/.cargo/bin:$PATH"

# add linuxbrew to path
export PATH="$HOME/.linuxbrew/bin:$HOME/.linuxbrew/sbin:$PATH"
export MANPATH="$HOME/.linuxbrew/share/man:$MANPATH"
export INFOPATH="$HOME/.linuxbrew/share/info:$INFOPATH"
# add a local npm
export PATH="$PATH:$HOME/npm/bin"
if type "yarn" > /dev/null; then
  export PATH="$PATH:$(yarn global bin)"
fi
# Add RVM to PATH: automatically done by RVM
export PATH="$PATH:$HOME/.rvm/bin"

# For React Native android
if [[ "$(uname)" == Darwin* ]]; then
  export JAVA_HOME=/Library/Java/JavaVirtualMachines/zulu-17.jdk/Contents/Home
fi
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/platform-tools

# so that vim on ubuntu can pbcopy, since vim's commands open
# an nonlogin noninteractive shell
if [[ "$(uname)" != Darwin* ]]; then
  alias pbcopy="xclip -selection clipboard"
  alias pbpaste="xclip -selection clipboard -o"
fi

alias tmux="tmux -2"
#alias vim="nvim"

# for neovim
export PATH="$PATH:/opt/nvim/"
# if [[ "$(uname)" != Darwin* ]] && [[ -e "/etc/redhat-release" ]]; then
#   export VIMRUNTIME=/usr/share/vim/vim74
# else
#   alias vim="nvim" # not working on my centos box yet
# fi

alias sl="hg ssl"
alias slup="hg-sl-up"
alias hgclean="hg update -C ."

alias codegrep="grep \
  --color=auto \
  --exclude-dir={.bzr,CVS,.git,.hg,.svn,node_modules,build,.next}\
  --ignore-case\
  --line-number\
  --binary-files=without-match\
  --extended-regexp\
  --recursive\
"
alias jsgrep="grep \
  --color=auto \
  --exclude=\*.{log,lock} \
  --exclude-dir={.bzr,CVS,.git,.hg,.svn,node_modules,build,.next} \
  --ignore-case\
  --line-number\
  --binary-files=without-match\
  --extended-regexp\
  --recursive\
"
alias rngrep="grep \
  --color=auto \
  --exclude=\*.{log,lock} \
  --exclude-dir={.bzr,CVS,.git,.hg,.svn,node_modules,build,android,ios} \
  --ignore-case\
  --line-number\
  --binary-files=without-match\
  --extended-regexp\
  --recursive\
"

